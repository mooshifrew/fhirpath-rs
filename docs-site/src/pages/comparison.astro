---
// Astro component for FHIRPath Implementation Comparison - React Version
import { ComparisonPageWithProvider } from '../components/comparison/ComparisonPage.tsx';
import { PUBLIC_BASE_URL } from "astro:env/client";
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>OctoFHIR FHIRPath - Implementation Comparison</title>
    <meta name="description" content="Interactive visualization of FHIRPath implementation performance and compatibility across languages" />

    <!-- Mantine Core styles and fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        html, body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            min-height: 100vh;
        }

        #comparison-root {
            min-height: 100vh;
        }

    </style>

    <script>
        import { PUBLIC_BASE_URL } from "astro:env/client";
        let baseUrl = PUBLIC_BASE_URL;
        baseUrl = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
        window.PUBLIC_BASE_URL = baseUrl;
    </script>
</head>
<body>
    <div id="comparison-root">
        <ComparisonPageWithProvider client:load />
    </div>
</body>
</html>
